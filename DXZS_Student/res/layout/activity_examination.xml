<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:weightSum="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#27af23"
        android:weightSum="1"
        android:layout_weight="0.1">

        <ImageView
            android:src="@drawable/back"
            android:id="@+id/exam_back"
            android:layout_gravity="left|center"
            android:layout_weight="0.1"
            android:layout_width="60dp"
            android:layout_height="60dp" />


        <TextView
            android:id="@+id/prepare_classname_textview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="野外考核"
            android:textSize="24sp"
            android:gravity="center"
            android:layout_weight="0.80" />

        <ImageView
            android:src="@drawable/logo"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:id="@+id/imageView4"
            android:layout_gravity="left|center"
            android:layout_weight="0.02"
            android:layout_marginLeft="20dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/exam_classname_textview"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="普九班"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/exam_name_textview"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="张三"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/exam_mapname_textview"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="青山铺"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/exam_teachername_textview"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="老师"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:layout_weight="0.28"
        android:layout_height="wrap_content"
        android:divider="@android:color/background_dark"
        android:background="#27af23">
        <TextView
            android:id="@+id/exam_mark_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="指示物"
            android:layout_weight="0.1"
            android:gravity="center"
            android:textSize="24sp" />
        <View
            android:layout_width="0.5dp"
            android:background="#06060d"
            android:layout_height="30dp"/>
        <TextView
            android:id="@+id/exam_coordinate_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="坐标"
            android:layout_weight="0.6"
            android:gravity="center"
            android:textSize="24sp" />
        <View
            android:layout_width="0.5dp"
            android:background="#06060d"
            android:layout_height="30dp"/>
        <TextView
            android:id="@+id/exam_answer_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="答案"
            android:gravity="center"
            android:textSize="24sp"
            android:layout_weight="0.2" />
        <View
            android:layout_width="0.5dp"
            android:background="#06060d"
            android:layout_height="30dp"/>
        <TextView
            android:id="@+id/exam_report_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="报告"
            android:gravity="center"
            android:textSize="24sp"
            android:layout_weight="0.2" />

    </LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:id="@+id/exam_point_listview"
        android:layout_height="289dp"
        android:background="@drawable/bg_shape" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/exam_return_button"
            style="@style/AppBaseTheme"
            android:layout_height="wrap_content"
            android:background="#27af23"
            android:gravity="center"
            android:text="完成"
            android:textSize="24sp"
            android:layout_width="100dp"
            android:layout_marginLeft="10dp" />

        <Button
            android:id="@+id/exam_call_help_button"
            style="@style/AppBaseTheme"
            android:layout_height="wrap_content"
            android:background="#27af23"
            android:gravity="center"
            android:text="求救"
            android:textSize="24sp"
            android:layout_width="100dp"
            android:layout_marginLeft="10dp" />
    </LinearLayout>


</LinearLayout>